<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <TextView
        android:id="@+id/coffeeChart"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:clickable="true"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:text=""
        android:background="@drawable/coffeechartheader_style"
        android:layout_marginTop="50dp"/>


    <TextView
        android:id="@+id/methodTag"
        android:text=""
        android:textStyle="italic"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:textColor="#FF303032"
        android:textSize="20sp"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/reviewMethod"
        android:text="Hello"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#FF303032"
        android:textSize="20sp"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/reviewDescription"
        android:text="Hello"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:textColor="#FF303032"
        android:textSize="20sp"
        android:layout_below="@id/methodTag"/>




</RelativeLayout>