<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/coffeeChart"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:clickable="true"
        android:background="@drawable/coffeechart_style"
        />
    <TextView
        android:id="@+id/coffeeJar"
        android:text="@string/coffeeJar"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="25dp"
        android:textColor="#FF303032"
        android:textSize="20sp"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/coffeeJarNum"
        android:text="Hello"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="45dp"
        android:textColor="#FF303032"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_toRightOf="@id/coffeeJar"/>
    <TextView
        android:id="@+id/amountTag"
        android:text="@string/amount"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="#FF303032"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_below="@id/coffeeJar"/>
    <TextView
        android:id="@+id/jarAmount"
        android:text="Hello"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:textColor="#FF303032"
        android:textSize="20sp"
        android:layout_toRightOf="@id/amountTag"
        android:layout_below="@id/coffeeJar"/>



</RelativeLayout>